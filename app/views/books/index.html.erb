<h1>Books</h1>

<table class="teble">

  <thead>
    <tr>
      <th class="header1">Title</th>
      <th class="header2">Body</th>
    </tr>
  </thead>

<% @books.each do |book| %>

<tbody>
  <tr>
    <td><span><%= book.title %></span></td>

    <td><span><%= book.body %></span></td>

    <!--詳細画面へ遷移-->
    <td><span>
      <%= link_to "show", book_path(book.id) %>
    </span></td>

    <td><span>
  　  <%= link_to "edit", edit_book_path(book.id) %>
　  </span></td>

    <td><span>
    　<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </span></td>
  </tr>
</tbody>

<% end %>

</table>

<h2>New Book</h2>

<%= form_with model: @book, url: books_path, method: :post do |f| %>

<% if @book.errors.any? %>
 <div id="alert-danger">
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 </div>
<% end %>

  <div class="field">
    <h4>title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>